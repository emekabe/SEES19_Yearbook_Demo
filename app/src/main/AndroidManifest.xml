<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emekachukwulobe.sees19yearbookdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sees"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_sees_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about"
            android:theme="@style/AboutTheme"
            android:launchMode="singleTop"
            android:parentActivityName=".AlumnusActivity" />
        <activity
            android:name=".PageActivity"
            android:label=""
            android:launchMode="singleTop"
            android:parentActivityName=".AlumnusActivity" />
        <activity
            android:name=".StatActivity"
            android:label="@string/stats"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/StatsTheme" />
        <activity
            android:name=".CommitteeActivity"
            android:label="@string/the_yearbook_committee"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CommitteeTheme" />
        <activity
            android:name=".AlumnusActivity"
            android:label=""
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AlumniTheme" />

<!--        The main activity -->
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
    </application>

</manifest>