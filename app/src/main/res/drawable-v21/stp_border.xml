<ripple android:color="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">

            <solid android:color="#22F4E1E1" />

            <stroke
                android:width="2dp"
                android:color="#FFFFFFFF"/>

            <corners
                android:radius="12dp"/>

            <padding
                android:right="20dp"
                android:left="15dp"
                android:top="1dp"
                android:bottom="1dp"/>

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <solid android:color="#29FFFFFF" />
