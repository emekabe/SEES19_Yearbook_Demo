                android:width="1dp"
                android:color="#B2F5F5F5"/>

            <corners
                android:radius="12dp"/>

            <padding
                android:right="20dp"
                android:left="15dp"
                android:top="1dp"
                android:bottom="1dp"/>


        </shape>
    </item>


</ripple>