<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    tools:context=".AlumnusActivity">



    <ImageView
        android:layout_below="@+id/alumni_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/app_icon_a" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6FFFFFF"/>


    <ImageView
        android:id="@+id/alumni_pic"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ma_background_02"/>

    <TextView
        android:id="@+id/alumni_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Name"
        android:textColor="#000000"
        android:textSize="36dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/alumni_pic"/>

    <TextView
        android:id="@+id/alumni_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(My Nickname)"
        android:textSize="28dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_below="@+id/alumni_name"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:textAllCaps="false"
            android:backgroundTint="#1DA1F3"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="LinkedIn"
            android:textAllCaps="false"
            android:backgroundTint="#007B9B"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:textAllCaps="false"
            android:backgroundTint="#D22A9B"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAllCaps="false"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"/>

    </LinearLayout>



</RelativeLayout>